<div id="carouselExampleIndicators" class="carousel slide">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="/Imagenes/FotosTerapeuta/@ViewBag.terapeuta.foto" class="d-block w-100" alt="Imagen terapeuta">
    </div>
    <div class="carousel-item">
      <img src="/Imagenes/Titulos/@ViewBag.terapeuta.FotoTitulo" class="d-block w-100" alt="Imagen título terapeuta">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
<div class="perfil-header">
    <h1>@ViewBag.terapeuta.nombre @ViewBag.terapeuta.apellido</h1>
    <h3>@ViewBag.rating</h3>
    <h3>@ViewBag.terapeuta.Universidad</h3>
</div>

<div class="especialidades">
    @foreach(string especialidad in @ViewBag.especialidades){
        <h3>@especialidad</h3>
    }
</div>
<div class="obrassociales">
  <h3>@ViewBag.terapeuta.nombre @ViewBag.terapeuta.apellido atiende estas obras sociales/prepagas:</h3>
    @foreach(ObraSocial obraSocial in @ViewBag.obrasSociales){
        <h3>@obraSocial.nombre</h3>
    }
</div>

<div class="bio">
    <p>@ViewBag.terapeuta.descripcion</p>
</div>

<div class="resenas">
    <h2>Reseñas</h2>
    <div class="resenas-lista">
        @foreach(Resenas resena in @ViewBag.resenas){
            <div class="resena-item">
                <h5 class="titulo">@resena.Titulo</h5>
                <h6 class="rating">@resena.rating</h6>
                <p class="contenido">@resena.Contenido</p>
            </div>
        }
    </div>
</div>

<div class="frases">
    <h2>Frases favoritas</h2>
    <div class="frases-lista">
        @foreach(Frase frase in @ViewBag.frasesFav){
            <div class="frase-item">
                <h5 class="texto">"@frase.frase"</h5>
                <h6 class="autor">@frase.autor</h6>
            </div>
        }
    </div>
</div>

<div class="contacto">
    <a href="@Url.Action("irChatNuevoTerapeuta", "Home", new {idTerapeuta = @ViewBag.terapeuta.id})">
        <button class="btn-contactar">Contactar</button>
    </a>
</div>