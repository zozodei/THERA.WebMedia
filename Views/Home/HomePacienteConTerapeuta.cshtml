@{
    ViewData["Title"] = "Thera - Tu impulso, tu cambio";
}

<div class="pagina-thera">
    <div class="contenedor-principal">

        <!-- Encabezado -->
        <div class="encabezado text-center mb-3">
            <img src="~/images/thera-header.jpg" alt="Thera" class="imagen-encabezado mb-3" />
            <h2 class="titulo-principal">Thera</h2>
            <p class="subtitulo">Tu impulso, tu cambio</p>
        </div>

        <!-- Fecha y clima -->
        <div class="info-fecha d-flex justify-content-between align-items-center mb-3 borde-abajo pb-2">
            <h6 class="texto-fecha">@DateTime.Now.ToString("dddd d 'de' MMMM")</h6>
            <span class="texto-clima">55° / 40° ☀️</span>
        </div>

        <!-- Título principal -->
        <div class="bloque-titulo text-center mb-4">
            <h5>Tomá un momento para vos</h5>
        </div>

        <!-- Botones principales -->
        <div class="botones-principales d-grid gap-2 mb-3">
            <a href="@Url.Action("irRespiraciones", "Home")" class="boton-verde">Respiración</a>
            <a href="@Url.Action("irFrases", "Home")" class="boton-verde">Frases</a>
            <a href="@Url.Action("irAudios", "Home")" class="boton-verde">Audios</a>
            <a href="@Url.Action("irChatBot", "Home")" class="boton-verde">Chatbot</a>
        </div>

        <!-- Texto adicional -->
        <p class="texto-nota text-center mb-3">También podés escribir lo que necesites</p>

        <!-- Botón Notas -->
        <div class="boton-notas d-grid mb-4">
            <a href="@Url.Action("irDiario", "Home")" class="boton-naranja">
                Tus Notas →
            </a>
        </div>

        <!-- Ejercicio de la última sesión -->
        <div class="bloque-ejercicio mb-4">
            <p class="titulo-ejercicio">Ejercicio de la última sesión (@ViewBag.fecha)</p>
            <form method="post" action='@Url.Action("guardarRespuestaPaciente", "Home")'>
                <div class="tarjeta">
                    <p class="texto-ejercicio">@ViewBag.tarea</p>
                    @if(@ViewBag.respuesta == ""){  
                        <textarea class="entrada-texto" rows="4" placeholder="Escribí aquí..." name="Respuesta"></textarea>
                    }else{
                        <textarea class="entrada-texto" rows="4" name="Respuesta">@ViewBag.respuesta</textarea>
                    }
                    <input type="submit" value = "Guardar">
                </div>
            </form>
        </div>

        <!-- Cambiar terapeuta -->
        <div class="bloque-terapeuta text-center mt-4">
            <p class="texto-terapeuta mb-2">¿Te sentís incómodo con tu terapeuta?<br>No hay problema</p>
            <a href="@Url.Action("irBuscarTerapeuta", "Home")" class="boton-borde">
                Buscar un nuevo terapeuta →
            </a>
        </div>

    </div>
</div>
