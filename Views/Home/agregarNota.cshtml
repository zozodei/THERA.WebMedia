<form method = "post" action = '@Url.Action("agregarNota", "Home")' class="nota">

        <label class="nota-label">Título:</label>
        <input type="text" value="Añadir título" name="titulo" >


        <label class="nota-label">Disparadora:</label>
        <select name="idDisparadora">
            @foreach (Disparadora disparadora in @ViewBag.disparadoras)
            {
                <option value="@disparadora.id">@disparadora.pregunta</option>
            }
        </select>


        <label class="nota-label">Descripción:</label>
        <textarea name="descripcion">Añadir texto</textarea>

        <label class="nota-label">Compartir con terapeuta</label>
        <input type="hidden" name="visibleTerapeuta" value="false" />
        <input type="checkbox" name="visibleTerapeuta" value="true">


        <input type="submit" value="Agregar" >
</form>