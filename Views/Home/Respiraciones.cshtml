<div class="respiraciones">
  <h1>Ejercicios de respiraci√≥n</h1>
  <section class="guia-respiracion">
    <div id="fase">
      <img id="imgRespiracion" src="/Imagenes/Respiraciones/1.png" alt="Paso 1">
      <h2 id="textoFase">Inhal√° profundo</h2>
      <div id="temporizador">5</div>
    </div>

    <button id="iniciarBtn">Comenzar</button>
  </section>
</div>

<style>
.respiraciones {
  text-align: center;
  margin-top: 30px;
}

.guia-respiracion img {
  width: 180px;
  height: auto;
  margin-bottom: 15px;
  transition: transform 1s ease-in-out;
}

#temporizador {
  font-size: 2em;
  font-weight: bold;
  margin: 10px 0;
  color: #5F6F52;
}

#iniciarBtn {
  padding: 10px 20px;
  font-size: 1em;
  border: none;
  border-radius: 10px;
  background-color: #5F6F52;
  color: white;
  cursor: pointer;
  transition: background-color 0.3s;
}

#iniciarBtn:hover {
  background-color: #005bb5;
}
</style>

<script>
const fases = [
  { texto: "Inhal√° profundo", img: "/Imagenes/Respiraciones/1.png", duracion: 5 },
  { texto: "Manten√© el aire", img: "/Imagenes/Respiraciones/2.png", duracion: 5 },
  { texto: "Exhal√° lentamente", img: "/Imagenes/Respiraciones/3.png", duracion: 5 }
];

const textoFase = document.getElementById("textoFase");
const imgRespiracion = document.getElementById("imgRespiracion");
const temporizador = document.getElementById("temporizador");
const iniciarBtn = document.getElementById("iniciarBtn");

let faseActual = 0;
let repeticionActual = 1;
const totalRepeticiones = 3;
let intervalo;
let enEjecucion = false;

iniciarBtn.addEventListener("click", () => {
  if (!enEjecucion) {
    // Iniciar rutina
    enEjecucion = true;
    iniciarBtn.textContent = "Parar";
    faseActual = 0;
    repeticionActual = 1;
    ejecutarFase();
  } else {
    // Parar rutina
    detenerEjercicio();
  }
});

function ejecutarFase() {
  if (!enEjecucion) return;

  if (faseActual >= fases.length) {
    // Termin√≥ un ciclo
    if (repeticionActual < totalRepeticiones) {
      mostrarRepeticion();
    } else {
      textoFase.textContent = "¬°Buen trabajo! üåø";
      imgRespiracion.src = "/Imagenes/Respiraciones/4.png";
      temporizador.textContent = "";
      reiniciarBoton();
    }
    return;
  }

  const fase = fases[faseActual];
  textoFase.textContent = fase.texto;
  imgRespiracion.src = fase.img;
  let tiempoRestante = fase.duracion;
  temporizador.textContent = tiempoRestante;

  clearInterval(intervalo);
  intervalo = setInterval(() => {
    if (!enEjecucion) {
      clearInterval(intervalo);
      return;
    }
    tiempoRestante--;
    temporizador.textContent = tiempoRestante;
    if (tiempoRestante <= 0) {
      clearInterval(intervalo);
      faseActual++;
      ejecutarFase();
    }
  }, 1000);
}

function mostrarRepeticion() {
    if((totalRepeticiones - repeticionActual) > 1){
    textoFase.textContent = `Repet√≠ ${totalRepeticiones - repeticionActual} veces m√°s`;
    }else{
    textoFase.textContent = `Repet√≠ ${totalRepeticiones - repeticionActual} vez m√°s`;
    }
  imgRespiracion.src = "/Imagenes/Respiraciones/4.png";
  temporizador.textContent = "";

  setTimeout(() => {
    if (!enEjecucion) return;
    repeticionActual++;
    faseActual = 0;
    ejecutarFase();
  }, 2000);
}

function detenerEjercicio() {
  enEjecucion = false;
  clearInterval(intervalo);
  textoFase.textContent = "Ejercicio detenido";
  temporizador.textContent = "";
  imgRespiracion.src = "/Imagenes/Respiraciones/4.png";
  reiniciarBoton();
}

function reiniciarBoton() {
  enEjecucion = false;
  iniciarBtn.textContent = "Comenzar";
}
</script>
