<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Thera</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.mhttps://github.com/zozodei/THERA.WebMedia/edit/master/Views/Shared/_Layout.cshtmlin.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>

<body>
    <header>
    @if (ViewBag.estaLogeado && !ViewBag.terapeutaLogeado)
    {
        <header>
    <nav>
      <div class="logo">
        <a href="#"><img src="Imagenes/Ave blanca.png" alt="Logo"></a>
      </div>
      
      <div class="navegador" id="navegador">
        <a href="#">CHATBOT</a>
        <a href="#">TERAPEUTAS</a>
        <a href="#">DIARIO</a>
        <a href="#">AYUDA RÁPIDA</a>
        <a href="#" class="cerrarSesion">CERRAR SESIÓN</a>
      </div>

      <div class="PerfilYHamburguesa">
        <div class="perfil">
          <img src="/Imagenes/FotoPerfil" alt="Foto de perfil">
        </div>
        <div class="MenuHamburguesa" id="MenuHamburguesa">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>
    </nav>

    <div class="mobileNavegadorMenu" id="mobileNavegadorMenu">
      <a href="#">CHATBOT</a>
      <a href="#">TERAPEUTAS</a>
      <a href="#">DIARIO</a>
      <a href="#">AYUDA RÁPIDA</a>
      <a href="#" class="cerrarSesion">CERRAR SESIÓN</a>
    </div>
  </header>

 
    }
    else if (ViewBag.estaLogeado && ViewBag.terapeutaLogeado)
    {
      <nav>
            <a href="@Url.Action("irVerPacientes", "HomeTerapeuta")">
            <div class="container justify-content-center">
                <img src="Imagenes/AveBlanca.png" alt="Logo" style="height:40px;">
            </div>
            </a>
        </nav>
    }
    else
    
    {
        <nav>
            <a href="@Url.Action("irIndex", "Home")">
            <div class="logo">
                <img src="Imagenes/AveBlanca.png" alt="Logo" style="height:40px;">
            </div>
            </a>
        </nav>
    }
</header>


    <main role="main">
        @RenderBody()
    </main>

   <footer class="footer">
    <div class="footerTextos">
      <h2 class="TexoTheraFooter">Thera</h2>
  
      <hr class="footerLineasDivisoras">
  
      <div class="footerRedesSociales">
        <img src="~/imagenes/Icons_footer/facebook.png" alt="Facebook" class="RedesSociales">
        <a href="https://www.instagram.com/thera.ort/"><img src="~/imagenes/Icons_footer/instagram.png" alt="YouTube" class="RedesSociales"> </a>
        <img src="~/imagenes/Icons_footer/linkedin.webp" alt="LinkedIn" class="RedesSociales">
        <img src="~/imagenes/Icons_footer/x.png" alt="Instagram" class="RedesSociales">
      </div>
  
      <div class="footerSoporteYContacto">
        <a href="#" class="footerLINK">Soporte</a>
        <span class="separator">|</span>
        <a href="#" class="footerLINK">Contacto</a>
      </div>
  
      <p class="footerThera2025Argentina">© 2025 THERA Argentina</p>
    </div>
  </footer>
  
  
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const hamburger = document.getElementById("MenuHamburguesa");
    const mobileMenu = document.getElementById("mobileNavegadorMenu");

    if (!hamburger || !mobileMenu) return;

    hamburger.addEventListener("click", () => {
      mobileMenu.classList.toggle("active");
    });

    // Cierra el menú al tocar un link del menú móvil
    mobileMenu.querySelectorAll("a").forEach(a => {
      a.addEventListener("click", () => mobileMenu.classList.remove("active"));
    });
  });
</script>

</body>

</html>
