<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NombreProyecto</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
</head>

<body>
    <header>
    @if (ViewBag.estaLogeado)
    {
        <nav class="navbar navbar-expand-lg bg-light">
            <div class="container">
                <!-- LOGO -->
                <a class="navbar-brand" href="@Url.Action("irHome", "Home")">
                    <img src="/Imagenes/AveBlanca.png" alt="Logo" style="height:40px;">
                </a>


                <!-- BOTÓN HAMBURGUESA -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menuPrincipal" aria-controls="menuPrincipal" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <!-- MENÚ -->
                <div class="collapse navbar-collapse" id="menuPrincipal">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("irChatbot", "Home")">CHATBOT</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("irListarTerapeutas", "Home")">TERAPEUTAS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("irDiario", "Home")">DIARIO</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("irAyudaRapida","Home")">AYUDA RÁPIDA</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-danger" href="@Url.Action("CerrarSesion", "Account")">CERRAR SESIÓN</a>
                        </li>
                    </ul>


                    <!-- FOTO DE PERFIL -->
                    <div class="d-flex align-items-center">
                        <img src="/Imagenes/FotoPerfil" alt="FotoPerfil" class="rounded-circle" style="height:40px; width:40px; object-fit:cover;">
                    </div>
                </div>
            </div>
        </nav>
    }
    else
    {
        <nav class="navbar bg-light">
            <div class="container justify-content-center">
                <img src="/Imagenes/AveBlanca.png" alt="Logo" style="height:40px;">
            </div>
        </nav>
    }
</header>


    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer-custom text-center">
        <div class="container py-4">
            <!-- Logo -->
            <div class="footer-logo mb-3">
                <h2 class="thera-logo">Thera</h2>
            </div>

            <!-- Línea divisoria -->
            <hr class="footer-divider">

            <!-- Íconos -->
            <div class="footer-icons d-flex justify-content-center gap-4 my-3">
                <img src="img/facebook.png" alt="Facebook" class="social-iconyoutube.png
                img/linkedin.png
            </div>

            <!-- Links -->
            <div class="footer-links my-2">
                <a href="#" class="footer-link">Soporte</a>
    -separator">|</span>
                #Contacto</a>
            </div>

            <!-- Copyright -->
            <p class="footer-copy mt-3">© 2025 THERA Argentina</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
