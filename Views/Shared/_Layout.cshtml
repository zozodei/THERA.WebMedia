<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NombreProyecto</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>

<body>
    <header>
    @if (ViewBag.estaLogeado && !ViewBag.terapeutaLogeado)
    {
        <nav>
      <!-- LOGO -->
      <div class="logo">
        <a href="@Url.Action("irHomePaciente", "Home")"><img src="/Imagenes/AveBlanca.png" alt="Logo"></a>
      </div>

      <!-- LINKS (web) -->
      <div class="nav-links" id="navLinks">
        <a href="@Url.Action("irChatBot", "Home")">CHATBOT</a>
        <a href="@Url.Action("irBuscarTerapeuta", "Home")">TERAPEUTAS</a>
        <a href="@Url.Action("irDiario", "Home")">DIARIO</a>
        <a href="@Url.Action("irAyudaRapida", "Home")">AYUDA RÁPIDA</a>
        <a href='@Url.Action("CerrarSesion", "Account")' class="cerrar-sesion">CERRAR SESIÓN</a>
      </div>

      <!-- PERFIL + MENÚ -->
        <div class="right-side">
          <a href="@Url.Action("verPerfilPaciente", "Account")">
          <div class="profile">
            <img src="/Imagenes/FotoPerfil" alt="Foto de perfil">
          </div>
          </a>
        <div class="hamburger" id="hamburger">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>
    </nav>

     
 
    }
    else if (ViewBag.estaLogeado && ViewBag.terapeutaLogeado)
    {
      <nav>
            <a href="@Url.Action("irVerPacientes", "HomeTerapeuta")">
            <div class="container justify-content-center">
                <img src="Imagenes/AveBlanca.png" alt="Logo" style="height:40px;">
            </div>
            </a>
        </nav>
    }
    else
    {
        <nav>
            <a href="@Url.Action("irIndex", "Home")">
            <div class="container justify-content-center">
                <img src="Imagenes/AveBlanca.png" alt="Logo" style="height:40px;">
            </div>
            </a>
        </nav>
    }
</header>


    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer-custom">
    <div class="footer-container">
      <!-- Logo -->
      <h2 class="thera-logo">Thera</h2>
  
      <!-- Línea divisoria -->
      <hr class="footer-divider">
  
      <!-- Íconos -->
      <div class="footer-icons">
        <img src="/Icons_footer/facebook.png" alt="Facebook" class="social-icon">
        <img src="/Icons_footer/instagram.png" alt="YouTube" class="social-icon">
        <img src="/Icons_footer/linkedin.webp" alt="LinkedIn" class="social-icon">
        <img src="/Icons_footer/x.png" alt="Instagram" class="social-icon">
      </div>
  
      <!-- Links -->
      <div class="footer-links">
        <a href="@Url.Action("irIndex", "Home")" class="footer-link">Soporte</a>
        <span class="separator">|</span>
        <a href="#" class="footer-link">Contacto</a>
      </div>
  
      <!-- Copyright -->
      <p class="footer-copy">© 2025 THERA Argentina</p>
    </div>
  </footer>
  
 <script>
  document.addEventListener("DOMContentLoaded", () => {
    const hamburger = document.getElementById("hamburger");
    const mobileMenu = document.getElementById("mobileMenu");

    hamburger.addEventListener("click", () => {
      mobileMenu.classList.toggle("active");
    });
  });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>


</body>

</html>
